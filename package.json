{
  "name": "intl-payments",
  "version": "1.0.0",
  "description": "International Payment Portal - Full Stack CRUD Application",
  "main": "index.js",
  "scripts": {
    "server": "cross-env NODE_ENV=development npm run dev --prefix server",
    "client": "cross-env NODE_ENV=development npm run dev --prefix client",
    "dev": "concurrently -k \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "start": "cross-env NODE_ENV=production npm run start --prefix server && npm run build --prefix client"
  },
  "keywords": [
    "payment",
    "banking",
    "fullstack",
    "react",
    "node",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "nodemon": "^3.1.10",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.4"
  }
}
